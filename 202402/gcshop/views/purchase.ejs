<%if(purchases.length === 0){%>
    <p>구매하신 상품이 없습니다. </p>
<%}else{%>
<table class="table table-bordered " style="text-align: center;">
    <thead class="table-primary "><th>상품</th><th>상품명</th><th>단가</th><th>구매량</th><th>총금액</th><th>구매일</th><th>취소여부</th>


    </thead>

    <% for( var i =0; i< purchases.length; i++){ %>
        <tr>
            <td><a href="/detail/<%= purchases[i].mer_id %>" style="text-decoration: none;"><img src="/image/<%= purchases[i].image %>" style="width:100px;height:100px; "></td>
            <td><%= purchases[i].name%></td>
            <td><%= purchases[i].price%>원</td>
            <td><%= purchases[i].qty%></td>
            <td><%= purchases[i].total%>원</td>
            <td><%= purchases[i].date%></td>
            <% if (purchases[i].cancel === 'Y'){ %>
                <td>취소된 상품</td>
            <%}else{%>
                <td><a href="/purchase/cancel/<%= purchases[i].purchase_id %>">구매취소</a></td>
            <%}%>
        </tr>
    <%}%>
</table>
<%}%>

